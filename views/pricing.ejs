            letter-spacing: -0.03em;
            margin-bottom: 1rem;
            background: linear-gradient(135deg, #ffffff 0%, #a5b4fc 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .pricing-header p {
            font-size: 1.25rem;
            color: rgba(255, 255, 255, 0.7);
            max-width: 600px;
            margin: 0 auto;
        }

        .comparison-table-wrapper {
            overflow-x: auto;
            border-radius: 24px;
            background: linear-gradient(135deg, rgba(139, 92, 246, 0.05), rgba(59, 130, 246, 0.02));
            backdrop-filter: blur(40px);
            border: 1px solid rgba(139, 92, 246, 0.2);
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.5);
        }

        .comparison-table {
            width: 100%;
            border-collapse: collapse;
            min-width: 800px;
        }

        .comparison-table thead tr {
            border-bottom: 2px solid rgba(139, 92, 246, 0.3);
        }

        .comparison-table th {
            padding: 2rem 1.5rem;
            text-align: center;
            font-size: 1.125rem;
            font-weight: 700;
            color: #ffffff;
            background: linear-gradient(135deg, rgba(139, 92, 246, 0.1), rgba(59, 130, 246, 0.05));
        }

        .comparison-table th:first-child {
            text-align: left;
            background: transparent;
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: rgba(255, 255, 255, 0.6);
        }

        .comparison-table tbody tr {
            border-bottom: 1px solid rgba(139, 92, 246, 0.1);
            transition: all 0.2s ease;
        }

        .comparison-table tbody tr:hover {
            background: rgba(139, 92, 246, 0.05);
        }

        .comparison-table tbody tr.category-header {
            background: linear-gradient(135deg, rgba(139, 92, 246, 0.15), rgba(59, 130, 246, 0.08));
            border-top: 2px solid rgba(139, 92, 246, 0.3);
            border-bottom: 2px solid rgba(139, 92, 246, 0.3);
        }

        .comparison-table tbody tr.category-header:hover {
            background: linear-gradient(135deg, rgba(139, 92, 246, 0.2), rgba(59, 130, 246, 0.1));
        }

        .comparison-table tbody tr.category-header td {
            padding: 1.5rem 1.5rem;
            font-weight: 700;
            font-size: 1rem;
            color: #a5b4fc;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .comparison-table td {
            padding: 1.25rem 1.5rem;
            text-align: center;
            color: rgba(255, 255, 255, 0.8);
            font-size: 0.9375rem;
        }

        .comparison-table td:first-child {
            text-align: left;
            font-weight: 500;
            color: rgba(255, 255, 255, 0.9);
        }

        .check-icon {
            color: #22c55e;
            font-size: 1.5rem;
            font-weight: 700;
        }

        .cross-icon {
            color: #ef4444;
            font-size: 1.5rem;
            font-weight: 700;
        }

        .plan-badge {
            display: inline-block;
            padding: 0.5rem 1rem;
            background: linear-gradient(135deg, #8b5cf6, #6366f1);
            border-radius: 100px;
            font-size: 0.875rem;
            font-weight: 600;
            color: white;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            box-shadow: 0 4px 16px rgba(139, 92, 246, 0.4);
            margin-bottom: 0.5rem;
        }

        .plan-badge.starter {
            background: linear-gradient(135deg, #6b7280, #4b5563);
        }

